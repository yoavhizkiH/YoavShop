@model PagedSearchProductsViewModel
@using PagedList.Mvc;
@using YoavShop.ViewModels
<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />
@{
    ViewBag.Title = "Products";
    var pspViewModel = Model;

}

<h2>Products</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

@using (Html.BeginForm("Index", "Product", FormMethod.Post))
{
    <table>
        <tr>
            <td>Name: </td>
            <td>
                @Html.TextBoxFor(m => m.ProductSearchModel.Name, ViewBag.CurrentFilter as string)
            </td>
        </tr>
        <tr>
            <td></td>
            <td><input type="submit" value="Search" /></td>
        </tr>
    </table>
}
<br />
<table class="table">
    <tr>
        <th>
            @Html.ActionLink("Name", "Index", new { sortOrder = ViewBag.NameSortParm, currentFilter = ViewBag.CurrentFilter })
        </th>
        <th>
            Description
        </th>
        <th>
            @Html.ActionLink("Supplier User Name", "Index", new { sortOrder = ViewBag.SupplierUserNameSortParm, currentFilter = ViewBag.CurrentFilter })
        </th>
        <th>
            @Html.ActionLink("Price", "Index", new { sortOrder = ViewBag.PriceSortParm, currentFilter = ViewBag.CurrentFilter })
        </th>
        <th>
            @Html.ActionLink("Categorie Name", "Index", new { sortOrder = ViewBag.CategorieNameSortParm, currentFilter = ViewBag.CurrentFilter })
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.PagedList)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Supplier.UserName)
            </td>
            <td>
                @item.Price $
                </td>

            <td>
                @Html.DisplayFor(modelItem => item.ProductCategorie.Name)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
<br />
Page @(Model.PagedList.PageCount < Model.PagedList.PageNumber ? 0 : Model.PagedList.PageNumber) of @Model.PagedList.PageCount

@Html.PagedListPager(Model.PagedList, PageNumber => Url.Action("Index", new
{
    PageNumber,sortOrder = ViewBag.CurrentSort, searchParams = Model.ProductSearchModel.ToString()

}))
